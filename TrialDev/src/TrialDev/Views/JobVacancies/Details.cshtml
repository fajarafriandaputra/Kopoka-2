@model TrialDev.Model.JobVacancyDTO

@{
    ViewData["Title"] = "Details";
}

<h2>@ViewBag.Title</h2>

<div class="card">
    <div class="card-header">
        @ViewBag.Title
    </div>
    <div class="card-body">
        <form>
            <div class="form-group row">
                <label asp-for="JobTitle" class="col-sm-2 col-form-label">Job Title<span style="color: red;">*</span></label>
                <div class="col-sm-10">
                    <input asp-for="JobTitle" class="form-control col-sm-12" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="VacancyName" class="col-sm-2 col-form-label">Vacancy Name</label>
                <div class="col-sm-10">
                    <input asp-for="VacancyName" class="form-control col-sm-12" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Period" class="col-sm-2 col-form-label">Period<span style="color: red;">*</span></label>
                <div class="input-group col-sm-10">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </div>
                    <input type="text" value='@Model.Period' class="form-control float-right col-sm-12" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Slots" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Slots" class="form-control col-sm-12" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Note" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Note" rows="5" cols="40" class="form-control col-sm-12" readonly></textarea>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div>
            <a href="#" onclick="Edit()" class="btn btn-sm btn-primary float-right ml-3"> <i class="fa fa-pencil"></i> Edit </a>
            <a asp-action="Index" class="btn btn-sm btn-danger float-right"><i class="fa fa-sign-out"></i> Back to List</a>
        </div>
    </div>
</div>



<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Job Vacancy</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Edit">
                <div class="modal-body">
                    <input type="hidden" asp-for="JobId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="JobTitle" class="control-label"></label><span style="color: red;">*</span>
                        <input asp-for="JobTitle" class="form-control col-sm-12" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VacancyName" class="control-label"></label>
                        <input asp-for="VacancyName" class="form-control col-sm-12" />
                        <span asp-validation-for="VacancyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Period" class="control-label"></label><span style="color: red;">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            <input type="text" asp-for="Period" class="form-control float-right col-sm-12" />
                        </div>
                        <span asp-validation-for="Period" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slots" class="control-label"></label>
                        <input asp-for="Slots" class="form-control col-sm-12" />
                        <span asp-validation-for="Slots" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note" class="control-label"></label>
                        <textarea asp-for="Note" rows="5" cols="40" class="form-control col-sm-12"></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default btn-sm" href="#" data-dismiss="modal">
                        <i class="fas fa-sign-in-alt"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i> Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#Period').daterangepicker({
                locale: {
                    format: 'YYYY/MM/DD'
                },
                opens: 'left'
            }, function (start, end, label) {
                console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
            });
        })

        function Edit() {
            $('#modal-default').modal('show');
        }
    </script>
}




